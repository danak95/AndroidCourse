<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layoutDirection="rtl"
    tools:context=".Fragments.MemberProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/member_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:saveEnabled="false">

        <ImageView
            android:id="@+id/member_image"
            android:layout_width="89dp"
            android:layout_height="112dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/member_name"
            android:layout_width="223dp"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:text="name"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/member_image"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/change_image_btn"
            android:layout_width="112dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="החלף תמונה"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/member_image" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="מין"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/change_image_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <Switch
            android:id="@+id/gender_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="  נקבה"
            android:textSize="18sp"
            app:layout_constraintRight_toLeftOf="@id/textView23"
            app:layout_constraintBaseline_toBaselineOf="@id/textView23"
            tools:checked="false" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:text="זכר"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@id/textView23"
            app:layout_constraintRight_toLeftOf="@id/gender_switch" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:text="טלפון"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView23"/>

        <EditText
            android:id="@+id/phone_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:inputType="phone"
            android:textSize="18sp"
            app:layout_constraintRight_toLeftOf="@id/textView25"
            app:layout_constraintBaseline_toBaselineOf="@id/textView25"/>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="דואר אלקטרוני"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView25" />

        <EditText
            android:id="@+id/member_email_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:inputType="textEmailAddress"
            app:layout_constraintRight_toLeftOf="@id/textView26"
            app:layout_constraintBaseline_toBaselineOf="@id/textView26"/>

        <TextView
            android:id="@+id/textView27"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="סיסמא"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView26" />

        <EditText
            android:id="@+id/member_password_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:inputType="textPassword"
            app:layout_constraintRight_toLeftOf="@id/textView27"
            app:layout_constraintBaseline_toBaselineOf="@id/textView27"/>

        <ImageButton
            android:id="@+id/update_member_btn"
            android:layout_width="41dp"
            android:layout_height="43dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="64dp"
            android:onClick="updateData"
            android:src="@android:drawable/ic_menu_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/save_member_btn"
            android:layout_width="39dp"
            android:layout_height="43dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="68dp"
            android:onClick="saveData"
            android:src="@android:drawable/ic_menu_save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancel_member_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/update_member_btn" />

        <ImageButton
            android:id="@+id/cancel_member_btn"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="60dp"
            android:onClick="cancelUpdateData"
            android:src="@android:drawable/ic_menu_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>